<UserControl x:Class="BlackBoxAI.VSExtension.ToolWindows.BlackBoxAIWindowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="400"
             Background="{DynamicResource {x:Static vsfx:VsBrushes.WindowKey}}"
             Foreground="{DynamicResource {x:Static vsfx:VsBrushes.WindowTextKey}}"
             xmlns:vsfx="clr-namespace:Microsoft.VisualStudio.Shell;assembly=Microsoft.VisualStudio.Shell.15.0">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <Style x:Key="VSButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="{DynamicResource {x:Static vsfx:VsBrushes.ButtonFaceKey}}"/>
                <Setter Property="Foreground" Value="{DynamicResource {x:Static vsfx:VsBrushes.ButtonTextKey}}"/>
                <Setter Property="BorderBrush" Value="{DynamicResource {x:Static vsfx:VsBrushes.ActiveBorderKey}}"/>
                <Setter Property="Padding" Value="8,4"/>
                <Setter Property="Margin" Value="2"/>
            </Style>
            
            <Style x:Key="VSTextBoxStyle" TargetType="TextBox">
                <Setter Property="Background" Value="{DynamicResource {x:Static vsfx:VsBrushes.WindowKey}}"/>
                <Setter Property="Foreground" Value="{DynamicResource {x:Static vsfx:VsBrushes.WindowTextKey}}"/>
                <Setter Property="BorderBrush" Value="{DynamicResource {x:Static vsfx:VsBrushes.ActiveBorderKey}}"/>
                <Setter Property="Padding" Value="4"/>
                <Setter Property="Margin" Value="2"/>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="{DynamicResource {x:Static vsfx:VsBrushes.CommandBarGradientBeginKey}}" 
                BorderBrush="{DynamicResource {x:Static vsfx:VsBrushes.ActiveBorderKey}}" BorderThickness="0,0,0,1">
            <StackPanel Orientation="Horizontal" Margin="8,4">
                <TextBlock Text="BlackBox AI Assistant" FontWeight="Bold" FontSize="14" 
                           Foreground="{DynamicResource {x:Static vsfx:VsBrushes.CommandBarTextActiveKey}}"/>
                <Button x:Name="SettingsButton" Content="âš™" Style="{StaticResource VSButtonStyle}" 
                        Width="24" Height="24" HorizontalAlignment="Right" Margin="8,0,0,0" 
                        Click="SettingsButton_Click"/>
                <Button x:Name="ClearButton" Content="ðŸ—‘" Style="{StaticResource VSButtonStyle}" 
                        Width="24" Height="24" HorizontalAlignment="Right" Margin="4,0,0,0" 
                        Click="ClearButton_Click"/>
            </StackPanel>
        </Border>
        
        <!-- Chat Area -->
        <ScrollViewer Grid.Row="1" x:Name="ChatScrollViewer" VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="ChatPanel" Margin="8">
                <TextBlock Text="Welcome to BlackBox AI Assistant!" FontWeight="SemiBold" Margin="0,0,0,8"/>
                <TextBlock Text="Ask me anything about your code, and I'll help you out." 
                           TextWrapping="Wrap" Foreground="{DynamicResource {x:Static vsfx:VsBrushes.GrayTextKey}}"/>
            </StackPanel>
        </ScrollViewer>
        
        <!-- Input Area -->
        <Border Grid.Row="2" Background="{DynamicResource {x:Static vsfx:VsBrushes.CommandBarGradientBeginKey}}" 
                BorderBrush="{DynamicResource {x:Static vsfx:VsBrushes.ActiveBorderKey}}" BorderThickness="0,1,0,0">
            <Grid Margin="8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBox x:Name="InputTextBox" Grid.Column="0" Style="{StaticResource VSTextBoxStyle}" 
                         Height="60" AcceptsReturn="True" TextWrapping="Wrap" 
                         VerticalScrollBarVisibility="Auto" KeyDown="InputTextBox_KeyDown"/>
                
                <Button x:Name="SendButton" Grid.Column="1" Content="Send" Style="{StaticResource VSButtonStyle}" 
                        Width="60" Height="60" Margin="8,0,0,0" Click="SendButton_Click"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
